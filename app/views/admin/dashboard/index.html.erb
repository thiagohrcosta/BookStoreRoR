<div class="container mt-5">
  <div class="row">
    <div class="col-md-6">
      <div class="d-flex justify-content-between">
        <div class="border border-2 border-primary rounded p-3 w-100 me-2">
          <h1>Authors<h1>
          <p><%= @number_of_authors %></p>
        </div>
        <div class="border border-2 border-primary rounded p-3 w-100">
          <h1>Books<h1>
          <p><%= @number_of_books %></p>
        </div>
      </div>
      <div>
        <table class="table">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Photo</th>
              <th scope="col">Name</th>
              <th scope="col"></th>
            </tr>
          </thead>
          <tbody>
            <% @authors.each do |author| %>
              <tr>
                <th scope="row"><%= author.id %></th>
                <td><img src="<%= author.photo %>" class="w-25 h-25"></td>
                <td><%= author.name %></td>
                <td><button class="btn btn-primary">Edit</button></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="col-md-6">
      <h1>Dashboard</h1>
      <%= form_with url: upload_admin_dashboard_index_path, method: :post, local: true do |f| %>
        <%= f.text_field :url %>
        <%= f.submit "Scraper" %>
      <% end %>
    </div>
  </div>
</div>